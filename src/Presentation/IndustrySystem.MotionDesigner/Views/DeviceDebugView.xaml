<UserControl x:Class="IndustrySystem.MotionDesigner.Views.DeviceDebugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="12,8" materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ImportConfigCommand}" 
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileImport" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="导入配置" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding RefreshDeviceStatusCommand}" 
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       IsEnabled="{Binding IsDeviceSelected}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="刷新状态" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <TextBlock Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center" 
                          Margin="16,0,0,0"
                          FontSize="14"
                          Opacity="0.9"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- 主内容区 -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 设备列表 -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{DynamicResource PrimaryHueLightBrush}" Padding="12,8">
                        <TextBlock Text="设备列表" FontWeight="SemiBold"/>
                    </Border>

                    <TabControl Grid.Row="1">
                        <!-- 电机 -->
                        <TabItem Header="电机">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <TextBlock Text="CAN 电机" FontWeight="SemiBold" Margin="0,4,0,8"/>
                                    <ListBox ItemsSource="{Binding Motors}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                    
                                    <TextBlock Text="EtherCAT 电机" FontWeight="SemiBold" Margin="0,12,0,8"/>
                                    <ListBox ItemsSource="{Binding EtherCATMotors}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <!-- 泵 -->
                        <TabItem Header="泵">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <TextBlock Text="注射泵" FontWeight="SemiBold" Margin="0,4,0,8"/>
                                    <ListBox ItemsSource="{Binding SyringePumps}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                    
                                    <TextBlock Text="蠕动泵" FontWeight="SemiBold" Margin="0,12,0,8"/>
                                    <ListBox ItemsSource="{Binding PeristalticPumps}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                    
                                    <TextBlock Text="自定义泵" FontWeight="SemiBold" Margin="0,12,0,8"/>
                                    <ListBox ItemsSource="{Binding DiyPumps}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <!-- IO 模块 -->
                        <TabItem Header="IO 模块">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListBox ItemsSource="{Binding EcatIODevices}" 
                                        SelectedItem="{Binding SelectedDevice}"
                                        DisplayMemberPath="Name"/>
                            </ScrollViewer>
                        </TabItem>

                        <!-- 其他设备 -->
                        <TabItem Header="其他">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <TextBlock Text="机器人" FontWeight="SemiBold" Margin="0,4,0,8"/>
                                    <ListBox ItemsSource="{Binding JakaRobots}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                    
                                    <TextBlock Text="TCU 温控" FontWeight="SemiBold" Margin="0,12,0,8"/>
                                    <ListBox ItemsSource="{Binding TcuDevices}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                    
                                    <TextBlock Text="离心机" FontWeight="SemiBold" Margin="0,12,0,8"/>
                                    <ListBox ItemsSource="{Binding CentrifugalDevices}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                    
                                    <TextBlock Text="称重传感器" FontWeight="SemiBold" Margin="0,12,0,8"/>
                                    <ListBox ItemsSource="{Binding WeighingSensors}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                    
                                    <TextBlock Text="二通阀" FontWeight="SemiBold" Margin="0,12,0,8"/>
                                    <ListBox ItemsSource="{Binding TwoChannelValves}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                    
                                    <TextBlock Text="三通阀" FontWeight="SemiBold" Margin="0,12,0,8"/>
                                    <ListBox ItemsSource="{Binding ThreeChannelValves}" 
                                            SelectedItem="{Binding SelectedDevice}"
                                            DisplayMemberPath="Name"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </materialDesign:Card>

            <!-- 设备调试面板 -->
            <materialDesign:Card Grid.Column="1" materialDesign:ElevationAssist.Elevation="Dp2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- 电机调试 -->
                        <Expander IsExpanded="True" Margin="0,0,0,8">
                            <Expander.Header>
                                <TextBlock Text="电机调试" FontWeight="SemiBold" FontSize="16"/>
                            </Expander.Header>
                            <StackPanel Margin="8" IsEnabled="{Binding IsDeviceSelected}">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="目标位置:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding MotorTargetPosition}" Margin="8,0"/>
                                </Grid>
                                
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="速度:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding MotorSpeed}" Margin="8,0"/>
                                </Grid>
                                
                                <CheckBox Content="相对移动" IsChecked="{Binding MotorRelative}" Margin="0,4"/>
                                
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="当前位置:" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding MotorPosition}" Margin="8,0" FontWeight="SemiBold"/>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Button Command="{Binding MotorMoveCommand}" 
                                           Style="{StaticResource MaterialDesignRaisedButton}"
                                           Margin="0,0,8,0">
                                        <TextBlock Text="移动"/>
                                    </Button>
                                    <Button Command="{Binding MotorHomeCommand}" 
                                           Style="{StaticResource MaterialDesignOutlinedButton}"
                                           Margin="0,0,8,0">
                                        <TextBlock Text="回原点"/>
                                    </Button>
                                    <Button Command="{Binding MotorStopCommand}" 
                                           Style="{StaticResource MaterialDesignOutlinedButton}"
                                           Margin="0,0,8,0">
                                        <TextBlock Text="停止"/>
                                    </Button>
                                    <Button Command="{Binding MotorGetPositionCommand}" 
                                           Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <TextBlock Text="获取位置"/>
                                    </Button>
                                </StackPanel>
                                
                                <!-- 电机状态 -->
                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                       BorderThickness="1" 
                                       Margin="0,8" 
                                       Padding="8"
                                       Background="{DynamicResource MaterialDesignBackground}">
                                    <StackPanel>
                                        <TextBlock Text="状态信息" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding MotorStatus.IsOnline, StringFormat='在线: {0}'}" Margin="0,2"/>
                                        <TextBlock Text="{Binding MotorStatus.IsMoving, StringFormat='运行中: {0}'}" Margin="0,2"/>
                                        <TextBlock Text="{Binding MotorStatus.HasError, StringFormat='错误: {0}'}" Margin="0,2"/>
                                        <TextBlock Text="{Binding MotorStatus.ErrorMessage, StringFormat='错误信息: {0}'}" 
                                                  Margin="0,2"
                                                  TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding MotorStatus.ErrorMessage}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding MotorStatus.ErrorMessage}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>

                        <!-- IO 调试 -->
                        <Expander IsExpanded="True" Margin="0,0,0,8">
                            <Expander.Header>
                                <TextBlock Text="IO 调试" FontWeight="SemiBold" FontSize="16"/>
                            </Expander.Header>
                            <StackPanel Margin="8" IsEnabled="{Binding IsDeviceSelected}">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="通道索引:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding IoChannelIndex}" Margin="8,0"/>
                                </Grid>
                                
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="输出值:" VerticalAlignment="Center"/>
                                    <CheckBox Grid.Column="1" IsChecked="{Binding IoOutputValue}" Content="输出" Margin="8,0"/>
                                </Grid>
                                
                                <Button Command="{Binding IoSetOutputCommand}" 
                                       Style="{StaticResource MaterialDesignRaisedButton}"
                                       Margin="0,8,0,0"
                                       HorizontalAlignment="Left">
                                    <TextBlock Text="设置输出"/>
                                </Button>
                                
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="输入值:" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding IoInputValue}" Margin="8,0" FontWeight="SemiBold"/>
                                </Grid>
                                
                                <Button Command="{Binding IoGetInputCommand}" 
                                       Style="{StaticResource MaterialDesignOutlinedButton}"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Left">
                                    <TextBlock Text="读取输入"/>
                                </Button>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignBackground}" 
               BorderBrush="{DynamicResource MaterialDesignDivider}" 
               BorderThickness="0,1,0,0"
               Padding="12,4">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Opacity="0.7"/>
        </Border>
    </Grid>
</UserControl>
