<prism:PrismApplication x:Class="IndustrySystem.Presentation.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:loc="clr-namespace:IndustrySystem.Presentation.Wpf.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ModernWpf Fluent resources -->
                <ui:ThemeResources />
                <ui:XamlControlsResources />

                <!-- Material Design theme (keep for existing controls) -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="LightBlue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />

                <!-- App styles -->
                <ResourceDictionary Source="/IndustrySystem.Presentation.Wpf;component/Resources/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Fluent blue pane backgrounds for NavigationView (override) -->
            <!-- Expanded Left pane background: very light blue -->
            <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#FFEAF4FF"/>
            <!-- Overlay/Compact pane background: accent blue with low opacity -->
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="#FF0078D4" Opacity="0.72"/>
            <!-- Top mode background (not used now, for completeness) -->
            <SolidColorBrush x:Key="NavigationViewTopPaneBackground" Color="#FF0078D4" Opacity="0.75"/>

            <!-- Global localization provider (backed by Strings.resx) -->
            <loc:LocalizationProvider x:Key="Loc" />
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
