<UserControl x:Class="IndustrySystem.Presentation.Wpf.Controls.MotionProgramViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="RobotIndustrial" Width="24" Height="24" 
                                            Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ProgramName}" Foreground="White" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="8,0,0,0" FontSize="14"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconButton}" Foreground="White"
                           Command="{Binding LoadCommand}" ToolTip="Load Program">
                        <materialDesign:PackIcon Kind="FolderOpen"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" Foreground="White"
                           Command="{Binding RunCommand}" ToolTip="Run" IsEnabled="{Binding CanRun}">
                        <materialDesign:PackIcon Kind="Play"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" Foreground="White"
                           Command="{Binding PauseCommand}" ToolTip="Pause" IsEnabled="{Binding IsRunning}">
                        <materialDesign:PackIcon Kind="Pause"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" Foreground="#FF6B6B"
                           Command="{Binding StopCommand}" ToolTip="Stop" IsEnabled="{Binding IsRunning}">
                        <materialDesign:PackIcon Kind="Stop"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <Border Grid.Row="1" Background="#FAFAFA">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                
                <ListBox ItemsSource="{Binding Nodes}" SelectedItem="{Binding SelectedNode}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8" Margin="2" CornerRadius="4"
                                   Background="{Binding Background}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Width="32" Height="32" CornerRadius="16"
                                           Background="{Binding HeaderColor}" Margin="0,0,8,0">
                                        <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                                                Width="18" Height="18"
                                                                Foreground="White"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                    
                                    <materialDesign:PackIcon Grid.Column="2" Kind="CheckCircle"
                                                            Foreground="#4CAF50" Width="20" Height="20"
                                                            Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            VerticalAlignment="Center"/>
                                    <materialDesign:PackIcon Grid.Column="2" Kind="Play"
                                                            Foreground="#2196F3" Width="20" Height="20"
                                                            Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            VerticalAlignment="Center"/>
                                    <materialDesign:PackIcon Grid.Column="2" Kind="AlertCircle"
                                                            Foreground="#F44336" Width="20" Height="20"
                                                            Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="12">
                            <TextBlock Text="Variables" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ItemsControl ItemsSource="{Binding Variables}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Key}" Opacity="0.7"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Value}" FontWeight="SemiBold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <Separator Margin="0,12"/>
                            
                            <TextBlock Text="Execution Log" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ItemsControl ItemsSource="{Binding ExecutionLogs}" MaxHeight="200">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="10" Opacity="0.8" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
        
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignToolBarBackground}" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: " Opacity="0.7"/>
                    <TextBlock Text="{Binding ExecutionState}" FontWeight="SemiBold"/>
                </StackPanel>
                
                <ProgressBar Grid.Column="1" Value="{Binding Progress}" Margin="16,0"
                            Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="{Binding ExecutedCount}" FontWeight="SemiBold"/>
                    <TextBlock Text=" / "/>
                    <TextBlock Text="{Binding TotalCount}"/>
                    <TextBlock Text=" nodes" Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
