<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="IndustrySystem.Presentation.Wpf.Views.MaterialInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:IndustrySystem.Presentation.Wpf.Resources">
    <UserControl.Resources>
        <loc:LocalizationProvider x:Key="Loc" />
    </UserControl.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="{Binding [Btn_Add], Source={StaticResource Loc}}" Click="OnAdd"/>
        </StackPanel>
        <ListView Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{Binding [Col_Common_Name], Source={StaticResource Loc}}"/>
                    <GridViewColumn Header="{Binding [Field_Material_Qty], Source={StaticResource Loc}}"/>
                    <GridViewColumn Header="{Binding [Col_Common_Actions], Source={StaticResource Loc}}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding [Btn_Edit], Source={StaticResource Loc}}" Click="OnEdit"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
