<UserControl x:Class="IndustrySystem.Presentation.Wpf.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:loc="clr-namespace:IndustrySystem.Presentation.Wpf.Resources"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="False"
             Background="{DynamicResource MaterialDesignPaper}">
    
    <UserControl.Resources>
        <loc:LocalizationProvider x:Key="Loc" />
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Icon and Title -->
            <Border Grid.Column="0"
                    Width="48" Height="48"
                    CornerRadius="24"
                    Background="{StaticResource UserGradientBrush}"
                    VerticalAlignment="Center"
                    Margin="0,0,16,0">
                <Border.Effect>
                    <DropShadowEffect Color="#FFB900" BlurRadius="12" 
                                    ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <materialDesign:PackIcon Kind="AccountMultiple" 
                                        Width="28" Height="28"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
            </Border>
            
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{x:Static loc:Strings.Nav_Users}" 
                          FontSize="22" FontWeight="SemiBold"/>
                <TextBlock Text="Manage user accounts and access" 
                          FontSize="13" Opacity="0.6" Margin="0,2,0,0"/>
            </StackPanel>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Center">
                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                       Command="{Binding RefreshCommand}"
                       Height="36" Padding="12,0"
                       Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" 
                                                VerticalAlignment="Center"
                                                Margin="0,0,6,0"/>
                        <TextBlock Text="{x:Static loc:Strings.Btn_Refresh}" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding ExportCommand}"
                       IsEnabled="False"
                       Height="36" Padding="12,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Export" 
                                                VerticalAlignment="Center"
                                                Margin="0,0,6,0"/>
                        <TextBlock Text="Export" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Add User Card -->
        <materialDesign:Card Grid.Row="2" Padding="16"
                            materialDesign:ElevationAssist.Elevation="Dp2"
                            UniformCornerRadius="8">
            <StackPanel>
                <TextBlock Text="Add New User" 
                          FontSize="15" FontWeight="SemiBold"/>
                
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Username -->
                    <TextBox Grid.Column="0"
                            x:Name="UserNameBox"
                            Height="48"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            materialDesign:HintAssist.Hint="{x:Static loc:Strings.Field_User_UserName}"
                            materialDesign:HintAssist.IsFloating="True"/>
                    
                    <!-- Display Name -->
                    <TextBox Grid.Column="2"
                            x:Name="DisplayNameBox"
                            Height="48"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            materialDesign:HintAssist.Hint="{x:Static loc:Strings.Field_User_DisplayName}"
                            materialDesign:HintAssist.IsFloating="True"/>
                    
                    <!-- Add Button -->
                    <Button Grid.Column="4"
                           Click="OnAdd"
                           Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                           Width="120" Height="40">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountPlus" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,6,0"/>
                            <TextBlock Text="{x:Static loc:Strings.Btn_AddUser}" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Users List Card -->
        <materialDesign:Card Grid.Row="4" Padding="16"
                            materialDesign:ElevationAssist.Elevation="Dp2"
                            UniformCornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Section Header with Search -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                              Text="User List" 
                              FontSize="15" FontWeight="SemiBold"/>
                    
                    <TextBox Grid.Column="1"
                            Width="220" Height="36"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            materialDesign:HintAssist.Hint="Search users..."
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.LeadingIcon="Magnify"/>
                </Grid>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="2"
                         ItemsSource="{Binding Users}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         CanUserAddRows="False"
                         SelectionMode="Single"
                         SelectionUnit="FullRow"
                         HeadersVisibility="Column"
                         GridLinesVisibility="Horizontal"
                         RowHeight="48"
                         Background="Transparent"
                         BorderThickness="0"
                         materialDesign:DataGridAssist.ColumnHeaderPadding="12,8"
                         materialDesign:DataGridAssist.CellPadding="12,6">
                    <DataGrid.Columns>
                        <!-- User Column with Avatar -->
                        <DataGridTemplateColumn Header="User" Width="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="6,0">
                                        <Border Width="32" Height="32"
                                               CornerRadius="16"
                                               Background="{StaticResource UserGradientBrush}"
                                               Margin="0,0,10,0">
                                            <materialDesign:PackIcon Kind="Account" 
                                                                    Width="18" Height="18"
                                                                    Foreground="White"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding UserName}" 
                                                      FontWeight="Medium"
                                                      FontSize="13"/>
                                            <TextBlock Text="{Binding DisplayName}" 
                                                      FontSize="11"
                                                      Opacity="0.6"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Status Column -->
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <materialDesign:Chip Content="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}"
                                                        Margin="6,0"
                                                        FontSize="11"
                                                        Padding="6,2"
                                                        Foreground="White">
                                        <materialDesign:Chip.Style>
                                            <Style TargetType="materialDesign:Chip">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:Chip.Style>
                                    </materialDesign:Chip>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Created Date -->
                        <DataGridTextColumn Header="Created" 
                                          Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}"
                                          Width="*"/>
                        
                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Actions" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="6,0">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               Click="OnResetPassword"
                                               Tag="{Binding Id}"
                                               ToolTip="Reset Password"
                                               Width="32" Height="32"
                                               Margin="0,0,4,0">
                                            <materialDesign:PackIcon Kind="LockReset" Width="18" Height="18"/>
                                        </Button>
                                        
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               Click="OnEdit"
                                               Tag="{Binding Id}"
                                               ToolTip="Edit User"
                                               Width="32" Height="32"
                                               Margin="0,0,4,0">
                                            <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18"/>
                                        </Button>
                                        
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               Click="OnDelete"
                                               Tag="{Binding Id}"
                                               ToolTip="Delete User"
                                               Width="32" Height="32"
                                               Foreground="{StaticResource ErrorBrush}">
                                            <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
