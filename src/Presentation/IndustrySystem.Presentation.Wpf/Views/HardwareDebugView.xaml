<UserControl x:Class="IndustrySystem.Presentation.Wpf.Views.HardwareDebugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <!-- 连接区域 -->
    <StackPanel Orientation="Horizontal" Margin="0,0,0,12" ui:ControlHelper.Header="连接">
      <ComboBox Width="140" SelectedValue="{Binding Transport}" SelectedValuePath="Content">
        <ComboBoxItem Content="ModbusTCP" />
        <ComboBoxItem Content="CAN" />
        <ComboBoxItem Content="EtherCAT" />
        <ComboBoxItem Content="HTTP" />
        <ComboBoxItem Content="TCP" />
      </ComboBox>
      <TextBox Width="220" Margin="8,0,0,0" Text="{Binding Endpoint}" ui:ControlHelper.PlaceholderText="例: 127.0.0.1:502" />
      <Button Content="连接" Margin="12,0,0,0" Command="{Binding ConnectCommand}" />
      <Button Content="断开" Margin="8,0,0,0" Command="{Binding DisconnectCommand}" />
    </StackPanel>

    <!-- 读取区域 -->
    <GroupBox Header="读取保持寄存器" Margin="0,0,0,12" Grid.Row="1">
      <StackPanel Orientation="Horizontal" Margin="8">
        <TextBlock Text="起始地址:" VerticalAlignment="Center" />
        <TextBox Width="80" Margin="6,0,0,0" Text="{Binding ReadStartAddress}" />
        <TextBlock Text="数量:" Margin="12,0,0,0" VerticalAlignment="Center" />
        <TextBox Width="80" Margin="6,0,0,0" Text="{Binding ReadCount}" />
        <Button Content="读取" Margin="12,0,0,0" Command="{Binding ReadCommand}" />
        <TextBlock Text="结果:" Margin="12,0,0,0" VerticalAlignment="Center" />
        <TextBox Width="260" Margin="6,0,0,0" Text="{Binding LastRead}" IsReadOnly="True" />
      </StackPanel>
    </GroupBox>

    <!-- 写入区域 -->
    <GroupBox Header="写入保持寄存器" Grid.Row="2" Margin="0,0,0,12">
      <StackPanel Orientation="Horizontal" Margin="8">
        <TextBlock Text="起始地址:" VerticalAlignment="Center" />
        <TextBox Width="80" Margin="6,0,0,0" Text="{Binding WriteAddress}" />
        <TextBlock Text="值(逗号分隔):" Margin="12,0,0,0" VerticalAlignment="Center" />
        <TextBox Width="260" Margin="6,0,0,0" Text="{Binding WriteValues}" />
        <Button Content="写入" Margin="12,0,0,0" Command="{Binding WriteCommand}" />
      </StackPanel>
    </GroupBox>

    <!-- 状态 -->
    <TextBlock Grid.Row="4" Foreground="Gray" TextWrapping="Wrap" Text="{Binding Status}" />
  </Grid>
</UserControl>
