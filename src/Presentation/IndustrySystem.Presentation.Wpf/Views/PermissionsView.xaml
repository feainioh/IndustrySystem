<UserControl x:Class="IndustrySystem.Presentation.Wpf.Views.PermissionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="False">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
      <TextBox x:Name="NameBox" Width="240" Margin="0,0,8,0" materialDesign:HintAssist.Hint="权限标识"/>
      <TextBox x:Name="DisplayNameBox" Width="240" Margin="0,0,8,0" materialDesign:HintAssist.Hint="显示名"/>
      <Button Click="OnAdd" Style="{StaticResource MaterialDesignRaisedButton}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
          <materialDesign:PackIcon Kind="Plus" Margin="0,0,6,0"/>
          <TextBlock Text="新增权限"/>
        </StackPanel>
      </Button>
    </StackPanel>
    <ListView Grid.Row="1" ItemsSource="{Binding Permissions}">
      <ListView.View>
        <GridView>
          <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
          <GridViewColumn Header="显示名" DisplayMemberBinding="{Binding DisplayName}"/>
          <GridViewColumn Header="操作" Width="90">
            <GridViewColumn.CellTemplate>
              <DataTemplate>
                <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding Id}" Style="{StaticResource MaterialDesignFlatButton}">
                  <materialDesign:PackIcon Kind="Delete"/>
                </Button>
              </DataTemplate>
            </GridViewColumn.CellTemplate>
          </GridViewColumn>
        </GridView>
      </ListView.View>
    </ListView>
  </Grid>
</UserControl>
